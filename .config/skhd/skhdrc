# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# focus desktop
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 10

# send window to desktop and follow focus
shift + alt - 1 : yabai -m window --space 1		&& yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2		&& yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3		&& yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4		&& yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5		&& yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6		&& yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7		&& yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8		&& yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space 9		&& yabai -m space --focus 9
shift + alt - 0 : yabai -m window --space 10	&& yabai -m space --focus 10


cmd + shift - h : yabai -m window --resize left:-20:0		&& yabai -m window --resize right:-20:0;
cmd + shift - j : yabai -m window --resize bottom:0:20		&& yabai -m window --resize top:0:20;
cmd + shift - k : yabai -m window --resize top:0:-20		&& yabai -m window --resize bottom:0:-20;
cmd + shift - l : yabai -m window --resize right:20:0		&& yabai -m window --resize left:20:0;

# toggle window split type
alt - e : yabai -m window --toggle split

alt - r : yabai --restart-service; skhd --restart-service;

cmd + shift - left	: yabai -m window --warp west
cmd + shift - down	: yabai -m window --warp east
cmd + shift - up	: yabai -m window --warp north
cmd + shift - right : yabai -m window --warp south
